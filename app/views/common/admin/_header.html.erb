<%= csrf_meta_tags %>

<%
def cdn_url(url, min: true)
  if (min and Rails.env.production?)
    url.sub(/\.(js|css)/, '.min\1')
  else
    url
  end
end

def cdn_css(url, options={})
  stylesheet_link_tag(cdn_url(url, options))
end

def cdn_js(url, options={})
  javascript_include_tag(cdn_url(url, options))
end
%>

<!-- jquery -->
<%= cdn_js('//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.js') %>

<!-- bootstrap -->
<%= cdn_css('//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css') %>
